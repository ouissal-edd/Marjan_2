<%- include('../partials/headerAdmin'); -%>
<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-4">
            <h6 id="titleReserv" class="m-0 font-weight-bold text-primary">Creat account</h6>
        </div>
        <div style="width: 20%;">
            <button class="btn btn-primary btn-sm" style="margin-bottom: 1px; margin-top:20px" type="button"
                data-toggle="modal" data-target="#add_new_promo" data-placement="top">
                <i class="fa fa-plus"></i>
                add new promo
            </button>

            <button class="btn btn-primary btn-sm" style="margin-bottom: 30px; margin-top:5px" type="button"
                data-toggle="modal" data-target="#add_new_cat" data-placement="top">
                <i class="fa fa-plus"></i>
                add new rayon
            </button>
        </div>

        <div class="card-body">

            <table class="table table-striped">
                <thead>
                    <tr class="text-center">
                        <th>Admin rayon</th>
                        <th>Center</th>
                        <th>Ville</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>

            </table>
        </div>
    </div>

    <!-- Add New  Account -->

    <div class="modal fade" id="add_new_promo" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"> add new promo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/addCenterAdmin" method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="name">date debut </label>
                            <input type="text" id="brand_name_input" class="form-control" placeholder="name"
                                name="nom_admin">

                        </div>
                        <div class="form-group">
                            <label for="name">email </label>
                            <input type="text" id="brand_name_input" class="form-control" placeholder="email"
                                name="email_admin">
                        </div>
                        <div class="form-group">
                            <label for="name">password </label>
                            <input type="password" class="form-control" placeholder="password" name="password_admin">
                        </div>
                        <div class="form-group">
                            <label for="name">password </label>
                            <select name="center" id="center" class="custom-select">
                                <option value="1">add</option>
                            </select> </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-info">add</button>

                    </div>
                </form>

            </div>
        </div>
    </div>


    <!-- Add New  categoryy -->

    <div class="modal fade" id="add_new_cat" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"> Add new categorie</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/addCategorie" method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="name">name </label>
                            <input type="text" id="brand_name_input" class="form-control" placeholder="Category"
                                name="type_cat">

                        </div>

                        <div class="modal-footer">
                            <button type="submit" class="btn btn-info">add</button>

                        </div>
                </form>

            </div>
        </div>
    </div>





    <%- include('../partials/footer'); -%>